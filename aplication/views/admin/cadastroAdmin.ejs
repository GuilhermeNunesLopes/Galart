<!DOCTYPE html>
<html style="height: auto;" lang="pt-br">

<% include ../componentes/head %>

<body style="height: auto;">

    <% include ../componentes/adminNavegacao %>
    
    <section class="container" style="margin-top: 50px; min-height: 500px;">

        <% if(valid.length > 0){ %>
            <div class="alert alert-danger login-alert">
                <strong>Atenção!</strong>
                <ul>
                    <% for(var i=0; i < valid.length; i++){ %>
                        <li><%= valid[i].msg %></li>
                    <% } %>
                </ul>
            </div>
        <% } %>

        <% if(msg.length > 0){ %>
            <div class="alert alert-success login-alert">
                <strong>Atenção!</strong>
                <ul>
                    <li><%= msg %></li>
                </ul>
            </div>
        <% } %>

        <div class="row">
            <div class="col-sm-12">
            
            </div>
            <div class="text-center mx-auto">
                <form action="/admin/cadastroAdmin" method="post">
                    <div class="form-group">
                        <label for="nome-produto">Nome do administrador:</label>
                        <input type="text" class="form-control" id="nome-admin" name="nomeadmin" />
                    </div>

                    <div class="form-group">
                        <label for="tipo-produto">E-mail:</label>
                        <input type="email" class="form-control" id="email-admin" name="emailadmin" />
                    </div>

                    <div class="form-group">
                        <label for="foto-produto">Senha:</label>
                        <input type="password" class="form-control" id="senha-admin" name="senhaadmin" />
                    </div>

                    <div class="form-group">
                        <label for="foto-produto">Confirmar senha:</label>
                        <input type="password" class="form-control" id="senha-admin" name="confirmasenhaadmin" />
                    </div>

                    <button class="btn btn-success right" type="submit">Confirmar</button>
                </form>
            </div>    
        </div> <!-- end row -->

    </section>

    <% include ../componentes/footer %>
</body>
</html>