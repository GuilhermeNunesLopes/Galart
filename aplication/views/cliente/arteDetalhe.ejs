<!DOCTYPE html>
<html style="height: auto;" lang="pt-br">

<% include ../componentes/head %>

<body style="height: auto;">
    <% var link; %>
    <% if(user !== null){ %>
    <% link = "carrinho"; %>
    <% include ../componentes/clienteNavegacao %>
    <% } else { %>
    <% link = "login"; %>
    <% include ../componentes/navegacao %>
    <% } %>
    <section class="container" style="min-height: 400px;">

        <div class="row" style="border: 1px solid #bababa; border-radius: 10px; margin: 50px 15px; padding: 15px 0px">
            <div class="col-sm-4">
                <img class="img-fluid" src="imgs/item 1.png" />
            </div>
            <div class="col-sm-8">
                <h1><%= data[0].nome %></h1>
                <h4>R$ <%= data[0].preco %></h4>
                <p style="font-weight: 700; font-size: 14px">Tipo: <%= data[0].tipo %> - Tamanho: <%= data[0].tamanho %></p>
                <p><%= data[0].descricao %></p>
                <form action="/<%= link %>" method="post">
                    <input hidden type="text" id="_id" name="_id" value="<%= data[0]._id %>" />
                    <button type="submit" class="btn btn-info float-right">Adicionar ao<br />Carrinho</button>
                </form>
            </div>
        </div>
        
    </section>

    <% include ../componentes/footer %>
</body>
</html>